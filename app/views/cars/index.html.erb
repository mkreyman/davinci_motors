<h1>Listing cars</h1>

<table>
  <thead>
  <tr>
    <th>Make</th>
    <th>Model</th>
    <th>Year</th>
    <th>Price</th>
    <th colspan="3">Actions</th>

  </tr>
  </thead>

  <tbody>
  <% @cars.each do |car| %>
      <tr id="<%= dom_id(car) %>">
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= number_to_currency(car.price) %></td>

        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car), id: "edit_car_#{car.id}" %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %>